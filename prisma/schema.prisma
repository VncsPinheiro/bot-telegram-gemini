generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @id
  name     String
  messages Message[]
}

model Message {
  id   String   @id @default(uuid())
  text String
  role RoleType
  date DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

enum RoleType {
  USER
  MODEL
}
